# avinetworks.aviconfig

# RUN echo "bind '"\e[A": history-search-backward'" >> /root/.inputrc
# RUN echo "bind '"\e[B": history-search-forward'" >> /root/.inputrc
RUN echo "alias h='history'" >> /root/.bashrc
RUN echo "alias i='grep'" >> /root/.bashrc
RUN echo "alias g='grep'" >> /root/.bashrc
RUN echo "alias ll='ls -la --color'" >> /root/.bashrc
RUN echo 'export PS1="\[\e[38;5;231m\]\A\[\e[m\]\[\e[38;5;46m\][deb-container]\[\e[m\]\[\e[38;5;245m\]\w \[\e[m\]\[\e[38;5;250m\]# \[\e[m\]"' >> /root/.bashrc

COPY * ./
