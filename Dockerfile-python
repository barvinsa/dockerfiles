# sudo docker run --rm -i -v "$(pwd)":"/python" -w="/python" deb-python python "$@"


FROM debian:stretch

RUN apt-get update
RUN apt-get install -y \
python \
python-pip \
openssh-client

RUN pip install \
ansible \
avisdk

# RUN ansible-galaxy install \
